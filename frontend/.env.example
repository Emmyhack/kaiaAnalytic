# API Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080

# Blockchain Configuration
REACT_APP_NETWORK_ID=1
REACT_APP_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
REACT_APP_CHAIN_NAME=Kaia Mainnet

# Contract Addresses (Update after deployment)
REACT_APP_ANALYTICS_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_DATA_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_SUBSCRIPTION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_ACTION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_PREMIUM=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_WALLET_CONNECT=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# UI Configuration
REACT_APP_THEME=dark
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=UTC

# Analytics Configuration
REACT_APP_ANALYTICS_ID=your-google-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn

# External Services
REACT_APP_COINGECKO_API_URL=https://api.coingecko.com/api/v3
REACT_APP_KAIA_API_URL=https://api.kaia.io/v1

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_DATA=false
REACT_APP_LOG_LEVEL=info

# Performance Configuration
REACT_APP_CACHE_TTL=300
REACT_APP_MAX_RETRIES=3
REACT_APP_REQUEST_TIMEOUT=10000

# Security Configuration
REACT_APP_ENABLE_HTTPS=true
REACT_APP_CONTENT_SECURITY_POLICY=true
REACT_APP_ENABLE_CORS=true