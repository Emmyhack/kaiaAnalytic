{
  "version": 2,
  "name": "kaia-analytics-ai",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@react_app_api_url",
    "REACT_APP_WS_URL": "@react_app_ws_url",
    "REACT_APP_NETWORK_ID": "@react_app_network_id",
    "REACT_APP_RPC_URL": "@react_app_rpc_url",
    "REACT_APP_ANALYTICS_REGISTRY_ADDRESS": "@react_app_analytics_registry_address",
    "REACT_APP_DATA_CONTRACT_ADDRESS": "@react_app_data_contract_address",
    "REACT_APP_SUBSCRIPTION_CONTRACT_ADDRESS": "@react_app_subscription_contract_address",
    "REACT_APP_ACTION_CONTRACT_ADDRESS": "@react_app_action_contract_address"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}